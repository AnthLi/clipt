{
  "name": "clipt",
  "productName": "Clipt",
  "description": "A simple cross platform clipboard history manager.",
  "version": "0.0.1",
  "main": "app.js",
  "author": {
    "name": "Anthony Li",
    "email": "me@anthli.com",
    "url": "anthli.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthli/clipt"
  },
  "license": "MIT",
  "dependencies": {
    "electron": "latest",
    "lodash": "latest",
    "nedb": "latest"
  },
  "devDependencies": {
    "electron-packager": "latest"
  },
  "scripts": {
    "start": "electron .",
    "build:win": "electron-packager . --platform=win32 --arch=ia32",
    "build:darwin": "electron-packager . --platform=darwin --arch=x64",
    "build:linux": "electron-packager . --platform=linux --arch=ia32"
  }
}
